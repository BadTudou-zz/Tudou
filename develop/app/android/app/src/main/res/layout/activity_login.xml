<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.badtudou.tudou.LoginActivity">
    <!-- Head -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="#FFF">
        <RelativeLayout
            android:layout_marginLeft="70dp"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="indi.zcm.dropdown.MainActivity">
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circular"
                android:id="@+id/relativeLayout3">
                <!-- Image -->
                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@mipmap/portrait_default"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout3"
                android:layout_alignRight="@+id/relativeLayout3"
                android:layout_alignEnd="@+id/relativeLayout3"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp">
                <!-- Title -->
                <TextView android:layout_width="match_parent"
                    android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:background="#865" android:text="@string/app_name" android:layout_marginRight="60dp" android:layout_marginEnd="67dp" /></RelativeLayout></RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="#512"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:background="#188"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <EditText
            android:background="#168"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_in_remenber"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_in"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_copyright"
            />
    </LinearLayout>
</LinearLayout>
