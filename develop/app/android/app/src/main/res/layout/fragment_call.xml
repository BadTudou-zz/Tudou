<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.badtudou.view.fragment.CallFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Row0">
        <include
            layout="@layout/app_bar_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/CallEditTextPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"
                android:cursorVisible="false"
                android:textColor="@color/text_main"
                android:gravity="fill_vertical|center"
                android:textSize="24.0sp"
                android:textStyle="bold"
                android:scrollHorizontally="true"
                android:hint="@string/hint_number_input"
                android:maxLines="1" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/vector_drawable_contacts_add"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/CallMatchContacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Row0"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <ListView
            android:id="@+id/contents_match_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Row1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CallMatchContacts">
        <!--  Buttons 1 2 3 -->
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button1"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_1_no_vm" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button2"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_2" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button3"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_3" />

    </LinearLayout>

    <!-- Buttons 4 5 6 -->
    <LinearLayout
        android:id="@+id/Row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Row1">

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button4"
            style="@style/DialerButton"
            app:srcCompat="@drawable/dial_num_4" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button5"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_5" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button6"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_6" />

    </LinearLayout>
    <!-- Buttons 7 8 9 -->
    <LinearLayout
        android:id="@+id/Row3"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Row2">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button7"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_7" />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button8"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_8" />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button9"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_9" />
    </LinearLayout>
    <!-- Buttons * 0 # -->
    <LinearLayout
        android:id="@+id/Row4"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/Row3">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/ButtonStar"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_star" />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/Button0"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_0" />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/ButtonHash"
            style="@style/DialerButton"
            android:src="@drawable/dial_num_pound" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Row5"
        android:layout_height="48.0dip"
        android:layout_width="match_parent"
        android:layout_below="@id/Row4">
        <ImageButton
            android:id="@+id/ButtonCall"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_dial_action_call"
            style="@style/DialerButton"/>
        <ImageButton
            android:id="@+id/ButtonDelete"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_dial_action_delete"
            style="@style/DialerButton"/>
    </LinearLayout>
</RelativeLayout>